<?xml version="1.0" ?>
<robot name="agni_bot">

  <material name="white">
      <color rgba="1 1 1 1"/>
  </material>

  <material name="orange">
      <color rgba="1 0.3 0.1 1"/>
  </material>

  <material name="blue">
      <color rgba="0.2 0.2 1 1"/>
  </material>

  <material name="black">
      <color rgba="0 0 0 1"/>
  </material>

  <material name="red">
      <color rgba="1 0 0 1"/>
  </material>

<!--/////////////////////////// base link //////////////////////// -->
  <link name="base_link">
    
  </link>
<!--/////////////////////////// body link //////////////////////// -->

  <joint name="body_joint" type="fixed">
    <parent link="base_link"/>
    <child link="body_link"/>
    <origin xyz="-0.15 0.0 0.0" rpy="0.0 0.0 0.0"/>
  </joint>

  <link name="body_link">
    <visual>
    <origin xyz="0.15 0.0 0.15" rpy="0.0 0.0 0.0"/>
      <geometry>
        <box size="0.3 0.3 0.3"/>
      </geometry>
      <material name="white"/>
    </visual>

    <collision>
    <origin xyz="0.15 0.0 0.15" rpy="0.0 0.0 0.0"/>
      <geometry>
        <box size="0.3 0.3 0.3"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <mass value="1.5" />
      <inertia ixx="0.079945" ixy="0.00012078" ixz="0.00015606" iyy="0.068406" iyz="-0.0049053" izz="0.12343" />
    </inertial>
  </link>
 <gazebo reference="body_link">
    <material>Gazebo/White</material>
</gazebo>

<!--/////////////////////////// left wheel link //////////////////////// -->
 <joint name="left_wheel_joint" type="continuous">
 <parent link="body_link"/>
 <child link="left_wheel"/>
 <origin xyz="0.15 0.15 0.0" rpy="-1.57 0.0 0.0"/>
 <axis xyz="0.0 0.0 -1"/>
  
 </joint>

 <link name="left_wheel">
  <visual>
    <geometry>
      <cylinder radius="0.0415" length="0.033"/>
    </geometry>
    <material name="blue"/>
  </visual>
  
  <collision>
    <geometry>
      <cylinder radius="0.0415" length="0.033"/>
    </geometry>
  </collision>

     <inertial>
      <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
      <mass value="0.50917" />
      <inertia ixx="0.0012185" ixy="1.8059E-20" ixz="3.0427E-20" iyy="0.0012185" iyz="-4.0491E-20" izz="0.0022928" />
    </inertial>

 </link>
 <gazebo reference="left_wheel">
    <material>Gazebo/Blue</material>
</gazebo>

 <!--/////////////////////////// right wheel link //////////////////////// -->
 <joint name="right_wheel_joint" type="continuous">
 <parent link="body_link"/>
 <child link="right_wheel"/>
 <origin xyz="0.15 -0.15 0.0" rpy="1.57 0.0 0.0"/>
 <axis xyz="0.0 0.0 1"/>
  
 </joint>

 <link name="right_wheel">
  <visual>
    <geometry>
      <cylinder radius="0.0415" length="0.033"/>
    </geometry>
    <material name="blue"/>
  </visual>

   <collision>
    <geometry>
      <cylinder radius="0.0415" length="0.033"/>
    </geometry>
  </collision>

   <inertial>
      <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
      <mass value="0.50917" />
      <inertia ixx="0.0012185" ixy="1.8059E-20" ixz="3.0427E-20" iyy="0.0012185" iyz="-4.0491E-20" izz="0.0022928" />
    </inertial>
  
 </link>
 <gazebo reference="right_wheel">
    <material>Gazebo/Blue</material>
</gazebo> 

  <!--/////////////////////////// f_caster wheel link //////////////////////// -->
 <joint name="f_caster_wheel_joint" type="fixed">
 <parent link="body_link"/>
 <child link="f_caster_wheel"/>
 <origin xyz="0.24 0.0 0.0" rpy="0.0 0.0 0.0"/>
 </joint>

 <link name="f_caster_wheel">
  <visual>
    <geometry>
      <sphere radius="0.04"/>
    </geometry>
    <material name="black"/>
  </visual>

  <collision>
    <geometry>
      <sphere radius="0.04"/>
    </geometry>
  </collision>

  <inertial>
      <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
      <mass value="0.50917" />
      <inertia ixx="0.0012185" ixy="1.8059E-20" ixz="3.0427E-20" iyy="0.0012185" iyz="-4.0491E-20" izz="0.0022928" />
    </inertial>
 </link>
 
  <gazebo reference="f_caster_wheel">
    <material>Gazebo/Black</material>
    <mu1 value="0.001"/>
    <mu2 value="0.001"/>
</gazebo>

   <!--/////////////////////////// r_caster wheel link //////////////////////// -->
 <joint name="r_caster_wheel_joint" type="fixed">
 <parent link="body_link"/>
 <child link="r_caster_wheel"/>
 <origin xyz="0.06 0.0 0.0" rpy="0.0 0.0 0.0"/>
 </joint>

 <link name="r_caster_wheel">
  <visual>
    <geometry>
      <sphere radius="0.04"/>
    </geometry>
    <material name="black"/>
  </visual>

  <collision>
    <geometry>
      <sphere radius="0.04"/>
    </geometry>
  </collision>


 <inertial>
      <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
      <mass value="0.50917" />
      <inertia ixx="0.0012185" ixy="1.8059E-20" ixz="3.0427E-20" iyy="0.0012185" iyz="-4.0491E-20" izz="0.0022928" />
    </inertial>
 </link>

   <gazebo reference="r_caster_wheel">
    <material>Gazebo/Black</material>
    <mu1 value="0.001"/>
    <mu2 value="0.001"/>
</gazebo>

<!--/////////////////////////// lidar link //////////////////////// -->

<joint name="lidar_joint" type="fixed">
        <parent link="body_link"/>
        <child link="lidar_link"/>
        <origin xyz="0.1 0 0.32" rpy="0 0 0"/>
    </joint>

    <link name="lidar_link">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
            <material name="red"/>
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.5" />
            <inertia ixx="0.01" ixy="0.0" ixz="0" iyy="0.01" iyz="0" izz="0.01" />
    </inertial>
    </link>
    <gazebo reference="lidar_link">
    <material>Gazebo/Red</material>
</gazebo> 


 <!--/////////////////////////// controller plugin //////////////////////// -->

<gazebo>
      <plugin filename="libgazebo_ros_diff_drive.so" name="agni_bot_controller">
        <odometry_frame>odom</odometry_frame>
        <commandTopic>cmd_vel</commandTopic>
        <publish_odom>true</publish_odom>
        <publish_odom_tf>true</publish_odom_tf>
        <update_rate>15.0</update_rate>
        <left_joint>left_wheel_joint</left_joint>
        <right_joint>right_wheel_joint</right_joint>
        <wheel_separation>0.3</wheel_separation>
        <wheel_diameter>0.083</wheel_diameter>
        <max_wheel_acceleration>2</max_wheel_acceleration>
        <robotBaseFrame>base_link</robotBaseFrame>

      </plugin>
    </gazebo>

    <!--/////////////////////////// Lidar plugin //////////////////////// -->

  <gazebo reference="lidar_link">
        <material>Gazebo/Red</material>

 <sensor name="VRB_lidar" type="ray">
 <pose> 0 0 0 0 0 0 </pose>
    <visualize>true</visualize>
    <update_rate>12.0</update_rate>
    <plugin filename="libgazebo_ros_ray_sensor.so" name="lidar_plugin">
    <ros>
      <remapping>~/out:=scan</remapping>
    </ros>
    <output_type>sensor_msgs/LaserScan</output_type>
    <frame_name>lidar_link</frame_name>
    </plugin>
    <ray>
      <scan>
        <horizontal>
          <samples>360</samples>
          <resolution>1</resolution>
          <min_angle>-3.14</min_angle>
          <max_angle>3.14</max_angle>

        </horizontal>
      </scan>
      <range>
        <min>0.3</min>
        <max>2</max>
        <resolution>0.015</resolution>
      </range>
      <noise>
        <type>gaussian</type>
        <mean>0.0</mean>
        <stddev>0.01</stddev>
      </noise>
    </ray>
  </sensor>
</gazebo>



</robot>